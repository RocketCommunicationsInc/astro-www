{
	"private": true,
	"name": "astro-www",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"start": "astro dev",
		"build": "astro build",
		"serve": "astro preview"
	},
	"devDependencies": {
		"@astrojs/markdown-remark": "0.14.0",
		"@astrojs/node": "0.2.1",
		"@astrojs/sitemap": "0.3.0",
		"@astropub/doc": "0.1.3",
		"@astropub/flow": "0.2.2",
		"@csstools/custom-units": "0.1.1",
		"astro": "^1.0.6",
		"parse-yaml": "0.1.0",
		"postcss-preset-env": "7.7.2",
		"remark-directive": "2.0.1",
		"types-object": "0.2.0"
	},
	"postcss": {
		"plugins": {
			"postcss-preset-env": {
				"browsers": "last 2 chrome version, last 2 firefox version, last 1 safari version",
				"stage": 3,
				"features": {
					"nesting-rules": true
				}
			},
			"@csstools/custom-units": {}
		}
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
