{
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"editor.useTabStops": true,
	"files.exclude": {
		"**/.vscode": true,
		"**/*.lock": true,
		"**/dist": true,
		"**/node_modules": true,
		"**/package-lock.json": true,
	},
	"postcss.validate": false,
	"prettier.useEditorConfig": true,
	"prettier.ignorePath": "/.vscode/.prettierignore",
}
