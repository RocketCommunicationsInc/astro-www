---
import Layout from 'project:layouts/default/default-layout-with-grid.astro';
import SiteSkipTo from 'project:components/site-skipto/site-skipto.astro'
import PageAside from 'project:components/page-aside/page-aside.astro'

import './new-docs-layout.css';
---
<Layout {...Astro.props}>
	<SiteSkipTo slot="top" />
	<main id="content">
		<slot name="header" />
		<div class="p-layout">
			<div class="-content"><slot /></div>
			<aside id="aside" class="p-aside">
				<div class="-contents">
					<PageAside />
				</div>
			</aside>
		</div>
	</main>
</Layout>