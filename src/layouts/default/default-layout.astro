---
export type { Props } from '@astropub/doc'

import { Document, Props } from '@astropub/doc'
import SiteSkipTo from 'project:components/site-skipto/site-skipto.astro'
import metaData from 'project:utils/meta'
const gaConfig = metaData.googleAnalyticsTrackingId

import './default-layout.css'

const props = {
	title: 'Astro',
	tabtitle: 'Astro UXDS',

	type: 'website',
	description: 'The Astro Space UX Design System enables developers & designers to build rich space app experiences with established interaction patterns & best practices.',

	imageurl: '/images/astro-card.jpg',
	imagealt: 'Astro Space UX Design System 7.0 beta',

	icon: '/favicon.svg',
	touchicon: '/apple-touch-icon.png',

	url: Astro.url.href,

	lang: 'en-US',

	robots: 'noindex,nofollow',

	...Astro.props,
} as Props
---
<Document class="p-root" body-class="p-body" {...props}>
	<link slot="head" rel="canonical" href="https://www.astrouxds.com">
	<!-- Google tag (gtag.js) -->
	<script slot="head" async src="https://www.googletagmanager.com/gtag/js?id=UA-114182957-1"></script>
	<script slot="head" define:vars={{ gaConfig }}>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config', gaConfig)
	</script>
	<SiteSkipTo />
	<slot />
</Document>