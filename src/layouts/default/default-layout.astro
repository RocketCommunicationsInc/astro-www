---
import { Document, Props } from '@astropub/doc'
import GoogleAnalytics from 'project:components/google-analytics/google-analytics.astro'
import globalData from 'project:data/global.json'
import './default-layout.css'

export type { Props } from '@astropub/doc'

const props = {
	...globalData.siteMeta,
	url: Astro.url.href,
	...Astro.props,
} as Props
---
<Document {...props}>
	<GoogleAnalytics slot="head" />
	<slot />
</Document>
<script>
	import 'project:layouts/default/newwindow.js'
</script>