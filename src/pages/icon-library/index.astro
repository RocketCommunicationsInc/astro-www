---
import Layout from 'project:layouts/new-docs/new-docs-layout.astro'
import IconSearch from 'project:components/icon-search/icon-search'
import PageHeader from 'project:components/page-header/page-header.js'
---
<Layout content={{ title: 'Icon Library' }} file={import.meta.url}>
	<PageHeader slot="header">
		<PageHeader.Heading>
			Icon Library
		</PageHeader.Heading>
		<PageHeader.Subheading>
			Search and download open source icons for use in Astro UXDS and web applications.
		</PageHeader.Subheading>
		<PageHeader.Nav></PageHeader.Nav>
	</PageHeader>

	<IconSearch />

	<Fragment slot="aside">
		<IconSearch.SidePanel />
	</Fragment>
</Layout>