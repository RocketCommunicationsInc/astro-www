---
import { Field, Root, Sandbox } from 'project:components/component-playground/ComponentPlayground'
---
<Root>
	<Sandbox is:tag="rux-progress" is:constructor="RuxProgress">
		<rux-progress value="1" />
	</Sandbox>
	<Fragment slot="variants">
		<Field type="menu" name="example:variant" implicitlabel>
			<option>Default</option>
		</Field>
	</Fragment>
	<Fragment slot="controls">
		<Field type="number" name="value" value="1" />
		<Field type="toggle" name="hideLabel" />
		<Field type="number" name="max" value="100" />
	</Fragment>
</Root>