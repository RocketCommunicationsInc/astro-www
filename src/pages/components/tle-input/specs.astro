---
import ComponentSpecs from 'project:components/ComponentSpecs.astro';
import WebComponentDocs from 'project:components/WebComponentDocs.astro';
---

<ComponentSpecs>
  <WebComponentDocs
    tagName="rux-tle-input"
    props={[
      {
        name: 'value',
        type: 'string',
        default: "''",
        description: 'The input value (TLE data)'
      },
      {
        name: 'label',
        type: 'string',
        default: 'undefined',
        description: 'The input label text'
      },
      {
        name: 'helpText',
        type: 'string',
        default: 'undefined',
        description: 'Help or explanation text'
      },
      {
        name: 'errorText',
        type: 'string',
        default: 'undefined',
        description: 'Validation error text'
      },
      {
        name: 'placeholder',
        type: 'string',
        default: 'undefined',
        description: 'Placeholder text'
      },
      {
        name: 'invalid',
        type: 'boolean',
        default: 'false',
        description: 'Sets the input as invalid'
      },
      {
        name: 'disabled',
        type: 'boolean',
        default: 'false',
        description: 'Sets the input as disabled'
      },
      {
        name: 'required',
        type: 'boolean',
        default: 'false',
        description: 'Sets the input as required'
      },
      {
        name: 'readonly',
        type: 'boolean',
        default: 'false',
        description: 'Sets the input as read-only'
      },
      {
        name: 'name',
        type: 'string',
        default: "''",
        description: 'The name of the input'
      }
    ]}
    events={[
      {
        name: 'ruxinput',
        description: 'Fired when the input value changes'
      },
      {
        name: 'ruxchange',
        description: 'Fired when a change to the input value is committed by the user'
      },
      {
        name: 'ruxblur',
        description: 'Fired when the input loses focus'
      },
      {
        name: 'ruxtlevalidated',
        description: "Fired when the input's TLE value has been validated (whether valid or not)"
      }
    ]}
    slots={[
      {
        name: 'label',
        description: 'The TLE input label'
      },
      {
        name: 'help-text',
        description: 'The help text'
      },
      {
        name: 'error-text',
        description: 'The error text'
      },
      {
        name: 'tle-examples',
        description: 'Optional slot for TLE example content'
      }
    ]}
    shadowParts={[
      {
        name: 'form-field',
        description: 'The form-field wrapper container'
      },
      {
        name: 'label',
        description: 'The input label when `label` prop is set'
      },
      {
        name: 'textarea',
        description: 'The textarea element'
      },
      {
        name: 'help-text',
        description: 'The help text element'
      },
      {
        name: 'error-text',
        description: 'The error text element'
      },
      {
        name: 'required',
        description: 'The asterisk when required is true'
      }
    ]}
  />
</ComponentSpecs>