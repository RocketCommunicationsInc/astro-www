			tokens: [
				'notification-banner-color-border-inner-off',
				'notification-banner-color-border-outer-off'
			],
		},
	]}
	/>
	<Heading type="h4" title="Default" />
	<TokenSpecTable
	tokens={[
		{
			name: 'Container (outer)',
			tokens: [
				'notification-banner-color-border-inner-default',
				'notification-banner-color-border-outer-default'
			],
		},
	]}
	/>



	<Heading type="h3" title="Sizes" />
	<div class="spec-container -examples">
		<figure><img loading="lazy" width="800" src="/img/components/notification-banner/notification-banner-large-size.webp" alt="Large Notification Banner"/></figure>
		<figure><img loading="lazy" width="800" src="/img/components/notification-banner/notification-banner-small-size.webp" alt="Small Notification Banner"/></figure>
	</div>

	<Heading type="h4" title="Small" />
	<TokenSpecTable
		tokens={[
			{
				name: 'Container (Inner)',
				tokens: [
					'notification-banner-padding-y-small',
				],
			},
		]}

	/>

	<Heading type="h4" title="Large" />
	<TokenSpecTable
		tokens={[
			{
				name: 'Container (Inner)',
				tokens: [
					'notification-banner-padding-y-large',
				],
			},
		]}

	/>

</ComponentDocsLayout>