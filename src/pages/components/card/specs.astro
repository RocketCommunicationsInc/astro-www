---
import ComponentDocsLayout from 'project:layouts/component-docs/component-docs-layout.astro';
import TokenSpecTable from 'project:components/token-spec-table/token-spec-table.astro';
import Heading from 'project:components/astro-headings/heading.astro';
---

<ComponentDocsLayout content={{ title: 'Card', description: 'A “card” is a UI design pattern that groups related information in a flexible-size container visually resembling a playing card. Within the Astro system, card sits on top of a container.' }}>
	<Heading type="h2" title="Anatomy" />

	<div class="spec-container -anatomy">
		<figure>
			<img
				loading="lazy"
				width="409px"
				src="/img/components/card/card-anatomy.png"
				alt="Anatomy Image"
			/>
		</figure>
		<ol>
			<li>Outer Container</li>

			<strong>Header</strong>
			<li>Prefix Slot (Optional)</li>
			<li>Title</li>
			<li>Header Container</li>
			<li>Suffix Slot (Optional)</li>
			<strong>Body</strong>
			<li>Content Slot (Default)</li>
			<strong>Footer</strong>
			<li>Footer Slot (Optional)</li>
			<li>Footer Container</li>
		</ol>
	</div>

	<Heading type="h2" title="Default" />

	<TokenSpecTable
		tokens={[
			{
				name: 'Container',
				tokens: [
					'card-shadow',
					'card-border-width',
					'card-color-border',
					'card-color-background',
				],
			},
			{
				name: 'Header',
				tokens: [
					'card-header-padding-y',
					'card-header-padding-x',
					'font-heading-3-font-size',
					'font-heading-3-font-family',
					'font-heading-3-font-weight',
					'font-heading-3-line-height',
					'font-heading-3-letter-spacing'
				],
			},
			{
				name: "Body",
				tokens: [
					'card-body-padding'
				]
			}
		]}
	/>

	<Heading type="h2" title="With Prefix" />

	<TokenSpecTable
		tokens={[
			{
				name: 'Header',
				tokens: [
					'card-header-prefix-dimension',
					'card-header-prefix-margin-right',
				],
			}
		]}
	/>

	<Heading type="h2" title="With Suffix" />

	<TokenSpecTable
		tokens={[
			{
				name: 'Header',
				tokens: [
					'card-header-suffix-dimension',
					'card-header-suffix-margin-left',
				],
			}
		]}
	/>

	<Heading type="h2" title="With Footer" />

	<TokenSpecTable
		tokens={[
			{
				name: 'Footer',
				tokens: [
					'card-footer-padding'
				],
			}
		]}
	/>

</ComponentDocsLayout>
