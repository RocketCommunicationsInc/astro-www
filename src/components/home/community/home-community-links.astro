---
import type community from 'project:data/home-community.json'
import { For } from '@astropub/flow'

const { data } = Astro.props as typeof community['data']['links']
---
<section class="p-community-links">
	<h4 class="p-community-links-heading">{data.heading.data}</h4>
	<div class="p-community-links-content">
		<For of={data.content.data}>{item => (
			<article class="p-community-link">
				<img class="p-community-link-image" src={item.image.data.url} alt={item.image.data.description} width={item.image.data.width} height={item.image.data.height} loading="lazy" />
				<div class="p-community-link-heading"><a href={item.website.data.url} target="_blank">{item.heading.data}</a></div>
				<div class="p-community-link-content">{item.content.data}</div>
			</article>
		)}</For>
	</div>
</section>