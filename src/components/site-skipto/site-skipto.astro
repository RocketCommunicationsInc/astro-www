---
import { anyprimitive } from 'project:utils/types'

export interface Props {
	url?: string

	[name: string]: anyprimitive
}

import './site-skipto.css'

const {
	slot,
	url,
	...attributes
} = {
	url: '#content',
	...Astro.props
} as Props
---
<a class="p-skip" {...attributes} href={url}><slot>Skip to main content</slot></a>