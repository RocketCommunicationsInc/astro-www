---
// Site banner component
---
<div class="site-banner">
	<div class="site-banner-content">
		<p>Astro helps you, now you can help us. Our funding relies on your support – visit <a href="https://astrouxds.com/supporting-astro">astrouxds.com/supporting-astro</a> to learn more.
	</div>
</div>

<style>
.site-banner {
	/* Layout */
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1000;
	width: 100%;

	/* Appearance */
	background-color: var(--AstroOrangeColor);
	color: var(--Black000Color);
	font-weight: 600;


	box-shadow: inset 0 -3px 3px rgba(0, 0, 0, 0.15);

	/* Text */
	font-size: 14px;
	line-height: 1.4;
}

.site-banner-content {
	/* Layout */
	max-width: 1200px;
	margin: 0 auto;
	padding: 0.25rem 0.5rem;

	/* Text */
	text-align: center;
}



.site-banner a {
	/* Appearance */
	color: var(--Black000Color);
	text-decoration: underline;
	text-underline-offset: 2px;
}

.site-banner a:hover,
.site-banner a:focus {
	/* Appearance */
	text-decoration: none;
	opacity: 0.9;
}

/* Mobile and tablet responsive design */
@media (max-width: 768px) {
	.site-banner {
		/* Text */
		font-size: 13px;
	}

	.site-banner-content {
		/* Layout */
		padding: 10px 12px;
	}

	.site-banner p {
		/* Text */
		text-align: left;
		line-height: 1.5;
	}
}

@media (max-width: 480px) {
	.site-banner {
		/* Text */
		font-size: 12px;
	}

	.site-banner-content {
		/* Layout */
		padding: 8px 10px;
	}
}

/* Adjust body to account for fixed banner */
:global(body.has-site-banner) {
	padding-top: var(--site-banner-height, 44px);
}

@media (max-width: 768px) {
	:global(body.has-site-banner) {
		padding-top: var(--site-banner-height, 50px);
	}
}

@media (max-width: 480px) {
	:global(body.has-site-banner) {
		padding-top: var(--site-banner-height, 48px);
	}
}
</style>

<script>
// Add class to body and calculate banner height
document.addEventListener('DOMContentLoaded', function () {
	const body = document.body
	const banner = document.querySelector('.site-banner')

	if (banner) {
		body.classList.add('has-site-banner')

		// Set CSS custom property for banner height
		const updateBannerHeight = () => {
			const height = (banner as HTMLElement).offsetHeight + 'px'
			document.documentElement.style.setProperty('--site-banner-height', height)
		}

		updateBannerHeight()

		// Update on resize
		window.addEventListener('resize', updateBannerHeight)
	}
})
</script>